                <service id="rc_servired.transaction.serializer" class="%rc_servired.transaction.serializer.class%">
                    <argument type="service" id="jms_serializer" />
                    <argument type="service" id="filesystem" />
                    <argument>%rc_servired.cachedir%</argument>
                </service>

                <service id="rc_servired.event_ecommerce" class="%rc_servired.event_ecommerce.class%">
                    <tag name="doctrine.event_listener" event="postPersist" />
                    <argument type="service" id="google.analytics" />
                </service>

                <service id="rc_servired.command.tools" class="%rc_servired.command.tools.class%">
                    <argument>%rc_servired.cachedir%</argument>
                    <argument type="service" id="rc_servired.transaction.serializer" />
                </service>

                <service id="ga.sync.transaction.factory" class="%ga.sync.transaction.factory.class%" />

        -->

    </services>
</container>
